.input-container {
    width: 50%;
    height: 150;
    left: 50%;
    top: 50%;
    alignment-x: center;
    alignment-y: center;

    .input-list {
        width: 100%;
        height: 100%;
    }

    .header {
        space-between-entries: 15;

        .input {
            height: 100%;
            width: 70%;
        }

        .checkbox-div {
            height: 100%;
            width: 20%;
        }
    }

    .advanced-options-label {
        alignment-x: center;
        margin-bottom: 10;
    }

    .row {
        alignment-x: center;
        width: 40%;
        height: 40;
    }

    .input-label {
        alignment-x: center;
    }

    .input-item {
        height: 100%;
        width: 100%;
        alignment-x: center;
    }

    .checkbox-list {
        height: 30%;
        width: 100%;
        padding-top: 5;
        alignment: center;
        space-between-entries: 100;

        .checkbox-div {
            height: 100%;
            width: 20;
            alignment: center;
        }
    }
}

.input-label {
    top: 0;
    alignment-x: center;
    font-size: 0.8;
}

.input-item {
    top: 10;
    width: 100%;
    height: 20;
    left: 50%;
    alignment-x: center;
}

.checkbox-label {
    top: 0;
    alignment-x: center;
    font-size: 0.8;
}

.checkbox-item {
    top: 10;
    width: 20;
    height: width;
    left: 50%;
    alignment-x: center;
}